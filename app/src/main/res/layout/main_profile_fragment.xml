<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#3B464C"
        tools:context=".fragments.mainfragments.ProfileFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_profile_button"
                android:src="@drawable/vector_orange_krest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/goProfile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/img_not_found"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Виктор Орлов"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textView17"
                app:layout_constraintEnd_toStartOf="@+id/goProfile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="+7 812 555 93 02"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/textView19"
                app:layout_constraintEnd_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/montserrat"
                android:text="Бонусы:"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
                app:layout_constraintEnd_toStartOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="0 Р"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/kotalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#34FFFFFF"
            android:background="@drawable/shape_one_line"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Каталог" />

        <TextView
            android:id="@+id/basket_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#34FFFFFF"
            android:background="@drawable/shape_one_line"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_bold"
            android:text="Корзина" />

        <TextView
            android:id="@+id/zakazi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#34FFFFFF"
            android:background="@drawable/shape_one_line"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Заказы" />

        <TextView
            android:id="@+id/Soobshenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#34FFFFFF"
            android:background="@drawable/shape_one_line"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Сообщения" />

        <TextView
            android:id="@+id/o_nas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#34FFFFFF"
            android:background="@drawable/shape_one_line"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="О нас" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:text="Профиль"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/svazatsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:text="Связаться с нами"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dostavka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:text="Доставка и оплата"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/obmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:text="Обмен и возврат"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_one_line"
            android:backgroundTint="#34FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"
            android:text="Авторизоваться"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
</layout>